<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal.PrincipalView">

    <ImageView
        android:id="@+id/PokemonImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:contentDescription="pokemon image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/PokemonNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pokemon name"
        app:layout_constraintEnd_toEndOf="@+id/PokemonImg"
        app:layout_constraintStart_toStartOf="@+id/PokemonImg"
        app:layout_constraintTop_toBottomOf="@+id/PokemonImg" />

    <TextView
        android:id="@+id/PokemonDescTxt"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="Pokemon Description"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/PokemonNameTxt"
        app:layout_constraintStart_toStartOf="@+id/PokemonNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/PokemonNameTxt"
        tools:layout_editor_absoluteX="95dp" />

    <Button
        android:id="@+id/RandomPokemonBtn"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:onClick="getRandomPokemon"
        android:text="Get Random Pokemon"
        app:layout_constraintEnd_toEndOf="@+id/PokemonDescTxt"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/PokemonDescTxt"
        app:layout_constraintTop_toBottomOf="@+id/PokemonDescTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>